<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/handshake_iv"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@string/action_settings"
            app:srcCompat="@drawable/vc_handshake"
            android:padding="10dp"
            android:layout_gravity="top|center"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deal_done"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textAllCaps="true"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="10dp"
            android:layout_margin="15dp"
            android:orientation="horizontal">


        <Button android:id="@+id/no_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/not_yet"
                android:layout_marginRight="10dp"
                android:background="@drawable/nobtn_bg"
                android:textColor="@color/edit"
                android:layout_height="wrap_content"/>
        <Button android:id="@+id/yes_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/yes"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yesbtn_bg"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>